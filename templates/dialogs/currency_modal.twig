{% trans_default_domain 'prompts' %}

	<div class="modal-body">
{{ form_start(currencyForm) }}
		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(currencyForm.name, 'form.denomination'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'currency_form_name'}} ) }}
			</div>
			<div class="col-sm-9">
				{{ form_widget(currencyForm.name ) }}
				<div id="err_name" class="modal-error-content"></div>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(currencyForm.symbol, 'form.sign'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'currency_form_symbol'}} ) }}
			</div>
			<div class="col-sm-9">
				{{ form_widget(currencyForm.symbol ) }}
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-3">
				{{ form_label(currencyForm.ratio, 'form.ratio-currency'|trans|capitalize, {'label_attr':{'class':'col-sm-2 col-form-label col-form-label-sm', 'for':'currency_form_ratio'}} ) }}
			</div>

			<div class="col-sm-9 from-check-box">
				{{ form_widget(currencyForm.ratio ) }}
			</div>
		</div>
{{ form_end(currencyForm) }}

		<div class="modal-footer">
			<button type="button" onclick="$('#dialog_form').submit();" class="btn btn-secondary">{{ 'button.save'|trans|capitalize }}</button>
		</div>
	</div>
